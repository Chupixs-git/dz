public class AreaCalculator
{
    private static int calculationCount = 0;

    public static double TriangleByBaseHeight(double baseLength, double height)
    {
        calculationCount++;
        return 0.5 * baseLength * height;
    }

    public static double TriangleByThreeSides(double a, double b, double c)
    {
        calculationCount++;
        double p = (a + b + c) / 2;
        return Math.Sqrt(p * (p - a) * (p - b) * (p - c));
    }

    public static double Rectangle(double length, double width)
    {
        calculationCount++;
        return length * width;
    }

    public static double Square(double side)
    {
        calculationCount++;
        return side * side;
    }

    public static double RhombusByDiagonals(double d1, double d2)
    {
        calculationCount++;
        return 0.5 * d1 * d2;
    }

    public static double RhombusBySideAndHeight(double side, double height)
    {
        calculationCount++;
        return side * height;
    }

    public static int GetCalculationCount()
    {
        return calculationCount;
    }

    public static void ResetCounter()
    {
        calculationCount = 0;
    }
}

public class Program2
{
    public static void Run()
    {
        Console.WriteLine("\n=== Задание 2: Калькулятор площади фигур ===");

        double triangle1 = AreaCalculator.TriangleByBaseHeight(10, 5);
        Console.WriteLine($"Площадь треугольника (основание 10, высота 5): {triangle1}");

        double triangle2 = AreaCalculator.TriangleByThreeSides(3, 4, 5);
        Console.WriteLine($"Площадь треугольника (стороны 3,4,5): {triangle2}");

        double rectangle = AreaCalculator.Rectangle(8, 6);
        Console.WriteLine($"Площадь прямоугольника (8x6): {rectangle}");

        double square = AreaCalculator.Square(7);
        Console.WriteLine($"Площадь квадрата (сторона 7): {square}");

        double rhombus1 = AreaCalculator.RhombusByDiagonals(8, 6);
        Console.WriteLine($"Площадь ромба (диагонали 8 и 6): {rhombus1}");

        double rhombus2 = AreaCalculator.RhombusBySideAndHeight(5, 4);
        Console.WriteLine($"Площадь ромба (сторона 5, высота 4): {rhombus2}");

        Console.WriteLine($"\nОбщее количество вычислений: {AreaCalculator.GetCalculationCount()}");
    }
}
