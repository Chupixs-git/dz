public class MathOperations
{
    public static int Max(int a, int b, int c, int d)
    {
        int max1 = Math.Max(a, b);
        int max2 = Math.Max(c, d);
        return Math.Max(max1, max2);
    }

    public static double Max(double a, double b, double c, double d)
    {
        double max1 = Math.Max(a, b);
        double max2 = Math.Max(c, d);
        return Math.Max(max1, max2);
    }

    public static int Min(int a, int b, int c, int d)
    {
        int min1 = Math.Min(a, b);
        int min2 = Math.Min(c, d);
        return Math.Min(min1, min2);
    }

    public static double Min(double a, double b, double c, double d)
    {
        double min1 = Math.Min(a, b);
        double min2 = Math.Min(c, d);
        return Math.Min(min1, min2);
    }

    public static double Average(int a, int b, int c, int d)
    {
        return (a + b + c + d) / 4.0;
    }

    public static double Average(double a, double b, double c, double d)
    {
        return (a + b + c + d) / 4.0;
    }

    public static long Factorial(int n)
    {
        if (n < 0)
            throw new ArgumentException("Факториал определен только для неотрицательных чисел");

        if (n == 0 || n == 1)
            return 1;

        long result = 1;
        for (int i = 2; i <= n; i++)
        {
            result *= i;
        }
        return result;
    }
}

public class Program3
{
    public static void Run()
    {
        Console.WriteLine("\n=== Задание 3: Математические операции ===");

        int maxInt = MathOperations.Max(5, 12, 8, 3);
        Console.WriteLine($"Максимум из (5, 12, 8, 3): {maxInt}");

        double maxDouble = MathOperations.Max(4.5, 7.2, 6.8, 9.1);
        Console.WriteLine($"Максимум из (4.5, 7.2, 6.8, 9.1): {maxDouble}");

        int minInt = MathOperations.Min(5, 12, 8, 3);
        Console.WriteLine($"Минимум из (5, 12, 8, 3): {minInt}");

        double minDouble = MathOperations.Min(4.5, 7.2, 6.8, 9.1);
        Console.WriteLine($"Минимум из (4.5, 7.2, 6.8, 9.1): {minDouble}");

        double avgInt = MathOperations.Average(10, 20, 30, 40);
        Console.WriteLine($"Среднее арифметическое из (10, 20, 30, 40): {avgInt}");

        double avgDouble = MathOperations.Average(1.5, 2.5, 3.5, 4.5);
        Console.WriteLine($"Среднее арифметическое из (1.5, 2.5, 3.5, 4.5): {avgDouble}");

        Console.WriteLine($"Факториал 5: {MathOperations.Factorial(5)}");
        Console.WriteLine($"Факториал 7: {MathOperations.Factorial(7)}");

        try
        {
            Console.WriteLine($"Факториал 0: {MathOperations.Factorial(0)}");
            Console.WriteLine($"Факториал 10: {MathOperations.Factorial(10)}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка: {ex.Message}");
        }
    }
}

