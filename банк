
  class BankAccount
  {
      private decimal balance;
      private string accountNumber;
      private string ownerName;

      public BankAccount(string accountNumber, string ownerName, decimal initialBalance = 0)
      {
          this.accountNumber = accountNumber;
          this.ownerName = ownerName;
          this.balance = initialBalance >= 0 ? initialBalance : 0;
      }


      public void AddMoney(decimal amount)
      {
          if (amount > 0)
          {
              balance += amount;
              Console.WriteLine($"Внесено: {amount:C}. Новый баланс: {balance:C}");
          }
          else
          {
              Console.WriteLine("Сумма для внесения должна быть положительной!");
          }
      }


      public void DeleteMoney(decimal amount)
      {
          if (amount <= 0)
          {
              Console.WriteLine("Сумма для снятия должна быть положительной!");
              return;
          }

          if (amount > balance)
          {
              Console.WriteLine($"Недостаточно средств! Доступно: {balance:C}, запрошено: {amount:C}");
          }
          else
          {
              balance -= amount;
              Console.WriteLine($"Снято: {amount:C}. Новый баланс: {balance:C}");
          }
      }


      public decimal Balance()
      {
          return balance;
      }


      public void info()
      {
          Console.WriteLine("\n=== Информация о счете ===");
          Console.WriteLine($"Владелец: {ownerName}");
          Console.WriteLine($"Номер счета: {accountNumber}");
          Console.WriteLine($"Текущий баланс: {balance:C}");
          Console.WriteLine("==========================\n");
      }
  }

  class BankAccountProgram
  {
      public static void Main(string[] args)
      {
          Console.OutputEncoding = System.Text.Encoding.UTF8;

          Console.WriteLine("=== Система управления банковским счетом ===\n");


          BankAccount account = new BankAccount("RU12345678901234567890", "Иван Петров", 1000);


          account.info();


          account.AddMoney(500);


          account.DeleteMoney(300);


          account.DeleteMoney(2000);


          Console.WriteLine($"\nТекущий баланс: {account.Balance():C}");


          account.info();
      }
  }
